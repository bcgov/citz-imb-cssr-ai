{
	"compilerOptions": {
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"module": "CommonJS",
		"target": "ESNext",
		"lib": ["ESNext", "DOM"],
		"esModuleInterop": true,
		"strict": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"sourceMap": true,
		"outDir": "./dist",
		"rootDir": "./"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
